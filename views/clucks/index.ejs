<%- include('../partials/header.ejs')%>

<h1>Clucks</h1>
<div class="page">
    <% for(let cluck of clucks){ %>
        <div>
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex"> 
                        <div class="p-2 ">
                            <img class="rounded" src="<%- avatar %>" alt="avatar">
                        </div>
                        <div>
                            <div>
                                <h5>
                                    <%- cluck.username%>
                                </h5>
                                <label><%- cluck.created_at%></label>
                            </div>
                            
                            <p>
                                <%- cluck.content%>
                            </p>
                            
                            <% if(cluck.image_url){ %>
            
                                <img style="width:500px;border:1px solid #000;" src="<%- cluck.image_url%>" alt="">
            
                            <% }    %>
                        </div>
                    </div>
    
                </div>
            </div>
        </div>
        
    <% } %>
</div>

<%- include('../partials/footer.ejs')%>